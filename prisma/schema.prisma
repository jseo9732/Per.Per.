generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String?  @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Perfume {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String   @unique
  brand         String
  note          String
  top           String
  middle        String
  bottom        String
  concentration String
  first         String
  second        String
  third         String
  fourth        String
  fifth         String
  sex           String


}